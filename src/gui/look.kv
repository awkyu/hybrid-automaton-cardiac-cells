#:import MeshLinePlot kivy_garden.graph.MeshLinePlot
Logic:
    do_default_tab: False
    tab_width: 200
    tab_pos: 'top_mid'
    TabbedPanelItem:
        text: 'Graphs and Parameters'
        BoxLayout:
            orientation: "horizontal"
            size_hint: [1, 1]
            BoxLayout:
                size_hint: [0.7, 1]
                orientation: "vertical"
                BoxLayout:
                    size_hint: [1, .83]
                    id: graph                    
                BoxLayout:
                    orientation: "horizontal"
                    size_hint: [1, 0.06]
                    Label:
                        size_hint: [0.1, 1]
                        text: "Red: "
                    BoxLayout:
                        size_hint: [0.4, 1]
                        id: red_selection
                    Label:
                        size_hint: [0.1, 1]
                        text: "Blue: "
                    BoxLayout:
                        size_hint: [0.4, 1]
                        id: blue_selection
                BoxLayout:
                    orientation: "horizontal"
                    size_hint: [1, 0.06]
                    Label:
                        size_hint: [0.1, 1]
                        text: "Green: "
                    BoxLayout:
                        size_hint: [0.4, 1]
                        id: green_selection
                    Label:
                        size_hint: [0.1, 1]
                        text: "White: "
                    BoxLayout:
                        size_hint: [0.4, 1]
                        id: white_selection
                BoxLayout:
                    size_hint: [1, .05]
                    orientation: "horizontal"
                    Button:
                        text: "START"
                        bold: True
                        on_press: root.start()
                    Button:
                        text: "STOP"
                        bold: True
                        on_press: root.stop()
                    Button:
                        text: "RESET"
                        bold: True
                        on_press: root.reset()
            BoxLayout:
                size_hint: [0.3, 1]
                orientation: "vertical"
                Label:
                    size_hint: [1, 0.05]
                    text: "Modifiable Parameters"
                BoxLayout:
                    orientation: "horizontal"
                    size_hint: [1, 0.1]
                    Label:
                        size_hint: [0.2, 1]
                        text: "Cell: "
                    BoxLayout:
                        size_hint: [0.6, 1]
                        id: cell_selection_input
                    BoxLayout:
                        size_hint: [0.2, 1]
                        id: cell_selection_button
                BoxLayout:
                    orientation: "vertical"
                    size_hint: [1, 0.85]
                    BoxLayout:
                        size_hint: [1, 0.95]
                        id: cellparams_text
                    BoxLayout:
                        size_hint: [1, 0.05]
                        id: update_cellparams
                BoxLayout:
                    orientation: "horizontal"
                    size_hint: [1, 0.05]
                    id: cellmodify
    TabbedPanelItem:
        text: "Modify Network"
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                orientation: "vertical"
                size_hint: [1, 0.4]
                BoxLayout:
                    orientation: "vertical"
                    size_hint: [1, 0.3]
                    Label:
                        size_hint: [1, 0.5]
                        text: "Cells"
                    BoxLayout:
                        orientation: "horizontal"
                        size_hint: [1, 0.5]
                        id: addcells
                BoxLayout:
                    orientation: "vertical"
                    size_hint: [1, 0.6]
                    id: currcells
                BoxLayout:
                    orientation: "vertical"
                    size_hint: [1, 0.1]
                    id: updatecells
            BoxLayout:
                orientation: "vertical"
                size_hint: [1, 0.6]
                Label:
                    size_hint: [1, 0.1]
                    text: "Paths"
                BoxLayout:
                    orientation: "vertical"
                    size_hint: [1, 0.9]
                    BoxLayout:
                        orientation: "horizontal"
                        size_hint: [1, 0.2]
                        BoxLayout:
                            orientation: "vertical"
                            size_hint: [0.333, 1]
                            Label:
                                size_hint: [1, 0.5]
                                text: "Cell i: "
                            BoxLayout:
                                orientation: "vertical"
                                size_hint: [1, 0.5]
                                id: celli_input
                        BoxLayout:
                            orientation: "vertical"
                            size_hint: [0.333, 1]
                            Label:
                                size_hint: [1, 0.5]
                                text: "Cell j: "
                            BoxLayout:
                                orientation: "vertical"
                                size_hint: [1, 0.5]
                                id: cellj_input
                        BoxLayout:
                            orientation: "vertical"
                            size_hint: [0.333, 1]
                            Label:
                                size_hint: [1, 0.5]
                                text: "Length (mm): "
                            BoxLayout:
                                orientation: "vertical"
                                size_hint: [1, 0.5]
                                id: length_input
                    BoxLayout:
                        orientation: "vertical"
                        size_hint: [1, 0.8]
                        BoxLayout:
                            orientation: "vertical"
                            size_hint: [1, 0.1]
                            id: addpathsbutton
                        BoxLayout:
                            orientation: "vertical"
                            size_hint: [1, 0.8]
                            id: pathstext
                        BoxLayout:
                            orientation: "vertical"
                            size_hint: [1, 0.1]
                            id: updatepathsbutton